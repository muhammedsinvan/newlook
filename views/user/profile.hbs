

<section style="min-height: 70vh;">

<div class="container">
    <div class="main-body pt-5">
         {{#each profile}}
          <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
              <div class="card">
                <div class="card-body">
                  <div class="d-flex flex-column align-items-center text-center">
                
                  {{!-- <img src="https://st3.depositphotos.com/15648834/17930/v/600/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg"> --}}
                
                     <img src="/product-images/{{this._id}}66.jpg"  alt="Admin" class="rounded-circle" width="150" style="width: 100px; height: 100px; ">

                
                
                    <div class="mt-3">
                      <h4>{{this.firstname}} {{this.lastname}}</h4>
                    </div>
                  </div>
                </div>
              </div>
              <div class="card mt--3">
              </div>
            </div>
          
            <div class="col-md-8">
              <div class="card mb-3">
                 
                <div class="card-body">
                     
                  <div class="row">
                      
                    <div class="col-sm-3">
                      <h6 class="mb-0">Full Name</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      {{this.firstname}}
                    </div>
                  </div>
                  <hr>
                     <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Last Name</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      {{this.lastname}}
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Email</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      {{this.email}}
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Phone</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      {{this.number}}
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-12">
                      <a class="btn btn-info "  href="/edit-profile/{{this._id}}">Edit</a>

                      <a class="btn btn-info "  href="/edit-password/{{this._id}}">Change Password</a>
                      
                    </div>
                     

                  </div>
                 
                </div>
               
              </div>
            </div>

       {{/each}}

            {{!-- <div class="col-md-8 ">
              <div class="card mb-3">
                <div class="card-body">

                  --}}


  <div class="container ml-2 mb-5">
                    <h3>Address</h3>

                          <div class="row">
                    <div class="col-sm-12">
                      <a class="btn btn-info "  href="/add-address">Add Address</a>
                    </div>
                      
                  </div>
                 {{#each address}}
                    <div class="row ">
                        
                        <div class="col-md-12 mt-5 alert  border-warning mr-2 card" style="cursor: pointer;">

                            <div class="col-md-12 d-flex flex-column" style="height: fit-content;">

                                <h6 class="">{{this.firstname}} {{this.lastname}}</h6>
                                <p class="">{{this.house}},{{this.city}} - {{this.postcode}}<br>Ph : {{this.number}}</p>
                                <div class=" mt-auto ">
                                    <a class="btn  kms mt-auto " href="/edit-address/{{this._id}}"
                                        style="width: fit-content;">
                                        Edit
                                    </a>
                                    <a class="btn btn-danger mt-auto" href="/delete-address/{{this._id}}"
                                        style="width: fit-content; color: rgb(250, 250, 250);" name="{{this.brand}}"
                                        onclick="deleteAddress(event)">
                                        Delete
                                    </a>
                                </div>

                            </div>
                        </div>
                      
                    </div>
                      {{/each}}
                </div>

                </div>
               
              </div>
            </div>


          </div>
     
            </div>
          </div>



</section>
