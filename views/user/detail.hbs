 {{!--adding elements to cart and adding the count on header --}}
   <script>
   function addtocart(proid){
        $.ajax({
            url:'/add-to-cart-detail/'+proid,
            method:'get',
            success:(response)=>{
                if(response.status){
                    let count=$('#cart-count').html()
                    count=parseInt(count)+1
                    $("#cart-count").html(count)
                }
             
            }  
        })
    }
</script>


{{!--buying a product from detail page and going cart page --}}
   <script>
   function gotocart(proid){
        $.ajax({
            url:'/go-to-cart-detail/'+proid,
            method:'get',
            success:(response)=>{
                if(response.status){
                    let count=$('#cart-count').html()
                    count=parseInt(count)
                    $("#cart-count").html(count)
                        location.href='/cart'
                }
             
            }  
        })
    }
</script>

