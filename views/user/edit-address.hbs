<section style="min-height: 70vh;">
                                                          <div class="d-flex mt-5 justify-content-center">

    <div class="col-lg-8 mt-5 rounded-2 shadow-lg grid-margin stretch-card" style="border-radius: 25px !important;">
                            <div class="create-ac-content mt-5 ml-5 ">
                                {{#each address}}
                               <form action="/edit-address" method="post">
                                    <fieldset>
                                        <h2 class="login-title mb-3">Edit Address</h2>
                                        <div class="row">
                                            <div class="form-group col-md-6 col-lg-6 col-xl-6 required">
                                                <label for="input-firstname">First Name <span class="required-f">*</span></label>
                                                <input name="firstname" value="{{this.address.firstname}}" id="inputfirstname" type="text">
                                                 <p id="namefirst" class="text text-danger"></p>
                                            </div>
                                            <div class="form-group col-md-6 col-lg-6 col-xl-6 required">
                                                <label for="input-lastname">Last Name <span class="required-f">*</span></label>
                                                <input name="lastname" value="{{this.address.lastname}}" id="inputlastname" type="text">
                                                <p id="nametwo" class="text text-danger"></p>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="form-group col-md-6 col-lg-6 col-xl-6 required">
                                                <label for="input-email">E-Mail <span class="required-f">*</span></label>
                                                <input name="email" value="{{this.address.email}}" id="inputemail" type="email">
                                                <p id="emailone" class="text text-danger"></p>
                                            </div>
                                            <div class="form-group col-md-6 col-lg-6 col-xl-6 required">
                                                <label for="input-telephone">Number <span class="required-f">*</span></label>
                                                <input name="number" value="{{this.address.number}}" id="number" type="number">
                                                <p id="numberone" class="text text-danger"></p>
                                            </div>
                                        </div>
                                         <div class="row">
                                            <div class="form-group col-md-6 col-lg-6 col-xl-6">
                                                <label for="input-company">Apartment/House Name</label>
                                                <input name="house" value="{{this.address.house}}" id="inputhouse" type="text">
                                                <p id="houseone" class="text text-danger"></p>
                                            </div>
                                            <div class="form-group col-md-6 col-lg-6 col-xl-6 required">
                                                <label for="input-address-1">Address <span class="required-f">*</span></label>
                                                <input name="address" value="{{this.address.address}}" id="address" type="text">
                                                <p id="addressone" class="text text-danger"></p>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="form-group col-md-6 col-lg-6 col-xl-6">
                                                <label for="input-address-2">State <span class="required-f">*</span></label>
                                                <input name="state" value="{{this.address.state}}" id="inputstate" type="text">
                                                <p id="stateone" class="text text-danger"></p>
                                            </div>
                                            <div class="form-group col-md-6 col-lg-6 col-xl-6 required">
                                                <label for="input-city">City <span class="required-f">*</span></label>
                                                <input name="city" value="{{this.address.city}}" id="inputcity" type="text">
                                                <p id="cityone" class="text text-danger"></p>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="form-group col-md-6 col-lg-6 col-xl-6 required">
                                                <label for="input-postcode">Post Code <span class="required-f">*</span></label>
                                                <input name="postcode" value="{{this.address.postcode}}" id="postcode" type="text">
                                                <p id="postone" class="text text-danger"></p>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="form-group col-md-12 col-lg-12 col-xl-12">
                                                    <input type="text" name="userid" id="" value="{{this.address._id}}" hidden >
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <div class="row">
                                            <div class="form-group col-md-12 col-lg-12 col-xl-12 mb-0">
                                                
                                            </div>

                                        <div class="order-button-payment">
                                            <button type="submit"class="btn">Add Address</button>
                                        </div>
                                        </div>
                                    </fieldset>
                               </form>
                               {{/each}}
                            </div>
                        </div>
                    </section>