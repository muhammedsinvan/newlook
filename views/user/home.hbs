                                <div class="container">
                                    <div class="wrap-caption center">
                                        <h2 class="mega-title slideshow__title">{{this.title}}</h2>
                                        <span class="mega-subtitle slideshow__subtitle">{{this.subtitle}}</span>
                                        <a href="/" class="btn btn--large">Shop Now</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                    </div>

                </div>
            </div>
        </div>


        <!--owl carosol-->

        <div class="owl-carousel owl-theme">
            {{#each brand}}

            <div class="item"><a href="/brand-products/{{this.name}}"><img src="/product-images/{{this._id}}2.jpg"
                        alt=""></a></div>
            {{/each}}

        </div>


        <div class="product-rows section no-pb-section">
            <div class="container">
                <div class="row">
                    <div class="col-12 col-sm-12 col-md-12 col-lg-12">
                        <div class="section-header text-center">
                            <h2 class="h2">New arrivals</h2>
                            <p>Looks beautiful and sharp on every device</p>
                        </div>
                    </div>
                </div>

                <div class="grid-products grid--view-items product-three-load-more">

                    <div class="row">
                        {{#each products}}
                        <div class="col-6 col-sm-6 col-md-4 col-lg-3 item">


                            <div class="product-image">

                                <a href="/productdetail/{{this._id}}">


                                    <img src="/product-images/{{this._id}}11.jpg" alt="image">


                                </a>

                                <div>
                                    <button onclick="addtocart('{{this._id}}')" class="btn btn-dark"><i
                                            class="icon an an-shopping-bag"></i></button>


                                    <button onclick="addtowishlist(event,'{{this._id}}')" class="btn btn-dark"><i
                                            class="icon an an-heart" id="{{this._id}}"></i></button>
                                </div>


                                <!-- End Product Button -->
                            </div>

                            <!-- End Product Image -->
                            <!-- Product Details -->
                            <div class="product-details text-center">
                                <!-- Product Name -->
                                <div class="product-name">
                                    <a href="product-layout1.html">{{this.name}}</a>
                                </div>
                                <!-- End Product Name -->
                                <!-- Product Price -->
                                <div class="product-price">
                                    {{#if this.offer}}
                                    {{#if this.oldPrize}}
                                    <span class="old-price">Rs:{{this.oldPrize}}</span>
                                    {{/if}}
                                    {{/if}}

                                    <span class="price">{{this.price}}</span>

                                    {{#if this.offer}}
                                    {{#if this.value}}
                                    <div class="text text-success">   {{this.value}}% Offer</div>
                                    {{/if}}
                                    {{/if}}
                                    
                                </div>



                            </div>

                        </div>
                        {{/each}}
                    </div>

                </div>


                <!-- End Grid Product -->
            </div>
        </div>
        <!-- End New arrivals -->
    </div>
