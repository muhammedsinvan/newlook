<!-- Body Content -->
<section style="min-height: 70vh;">
    <div id="page-content">
        <!-- Home Banner slider -->
        <div class="slideshow slideshow-wrapper pb-section">
            <div class="home-slideshow slideshow--large">
                <div class="slide slide1 d-block">

                    <div class="slideimg blur-up lazyload">
                        {{#each banner}}
                        <img class="blur-up lazyload" data-src="/product-images/{{this._id}}1.jpg"
                            src="/product-images/{{this._id}}1.jpg" alt="CLEARANCE SALE" title="CLEARANCE SALE" />
